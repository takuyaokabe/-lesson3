
<div class= "row">
	<div class="col-xs-3">

<h2>User info</h2>

<%= form_for [@user] do |f| %>
<table class="table">
    <%= attachment_image_tag @user, :profile_image,
     size: "100x100", format: "jpeg", fallback: "no_image.jpg"%></br>
	<tr>
		<td><%= f.label :name %></td>
	    <td><%= @user.name %></br></td>
    </tr>
    <tr>
	    <td><%= f.label :introduction %></td>
	    <td><%= @user.introduction %></br></td>
    </tr>
</table>
	    <td><%= link_to"",edit_user_path(current_user.id), class: "btn btn-default glyphicon glyphicon-wrench" %></td>

<% end %>

<h2>New book</h2>
<%= form_for @book2 do |f| %>
<%= f.label :Title %></br>
<%= f.text_field :title%></br>
<%= f.label :Opinion %></br>
<%= f.text_area :body%></br>
<%= f.submit "Create Book", class: "btn btn-primary" %>
<% end %>
</div>

<div class="col-xs-9">
<h2>Users</h2>

<table class="table">
    <thead>
	    <tr>
            <th>image</th>
	        <th>name</th>
        </tr>
   </thead>
   <tbody>
    <% @users.each do |user| %>
	    <tr>
			<td><%= attachment_image_tag user, :profile_image,
     size: "40x40", format: "jpeg", fallback: "no_image.jpg"%></br></td>
	        <td><%= user.name %></td>
	        <td><%= link_to "Show", user_path(user)%></td>
	    </tr>
<% end %>
</tbody>
</table>
</div>
