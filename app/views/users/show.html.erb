<%= flash[:notice] %>
<div class= "row">
	<div class="col-xs-3">
<h2>User info</h2>
<%= form_for [@user] do |f| %>
<table class="table">
    <%= attachment_image_tag @user, :profile_image,
     size: "100x100", format: "jpeg", fallback: "no_image.jpg"%></br>
	<tr>
		<td><%= f.label :name %></td>
	    <td><%= @user.name %></br></td>
    </tr>
    <tr>
	    <td><%= f.label :introduction %></td>
	    <td><%= @user.introduction %></br></td>
    </tr>
</table>
	    <td><%= link_to"",edit_user_path(current_user.id), class: "btn btn-default glyphicon glyphicon-wrench" %></td>

<% end %>


<h2>New book</h2>
<%= form_for @book do |f| %>
<div>
	<div><%= f.label :Title %></div>
    <div><%= f.text_field :title%></div>
</div>
<div>
    <div><%= f.label :Opinion %></div>
    <div><%= f.text_area :body%></div>
</div>
<div>
	<%= f.submit "Create Book", class: "btn btn-primary"%>
</div>
<% end %>
</div>
<div class="col-xs-9">
	<h2>Books</h2>
<table class="table table-hover table-inverse">
	<thead>
	<tr>
		<th><p></p></th>
	    <th>Title</th>
	    <th>Opinion</th>
    </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
	   <tr>
	   	    <td><a href="/users/<%=@user.id%>"%><%=attachment_image_tag @user, :profile_image,
     size: "50x50", format: "jpeg", fallback: "no_image.jpg"%></a></td>
			<td><%= link_to book.title,book_path(book)%></td>
	        <td><%= book.body %></td>
	    </tr>

    <% end%>
</tbody>
</table>
</div>
</div>



